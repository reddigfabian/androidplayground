<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="loremPicsumListViewModel"
            type="com.fabian.androidplayground.ui.main.picsumroom.list.viewmodels.LoremPicsumRoomListViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/mainSwipeRefresh"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:refreshing="@{loremPicsumListViewModel.swipeRefreshing}"
            app:onRefreshListener="@{() -> loremPicsumListViewModel.onSwipeRefresh()}">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mainListRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:isVisibleGone="@{!loremPicsumListViewModel.isEmptyLiveData()}"
                android:padding="2dp"
                android:clipToPadding="false"
                tools:listitem="@layout/item_lorem_picsum_room_list"
                android:transitionGroup="true"
                android:clipChildren="false"/>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empty State"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:isVisibleGone="@{loremPicsumListViewModel.isEmptyLiveData()}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>