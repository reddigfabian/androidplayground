<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="tensorFlowViewModel"
            type="com.fabian.androidplayground.ui.main.tensorflow.viewmodels.TensorFlowViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/tensorflowInputImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tensorflowFetchUrl"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:src="@{tensorFlowViewModel.drawable != null ? tensorFlowViewModel.drawable : @drawable/ic_launcher_foreground}"
            android:background="@{tensorFlowViewModel.drawable != null ? null : @drawable/image_placeholder_bg}"
            tools:src="@drawable/ic_launcher_foreground"
            tools:background="@drawable/image_placeholder_bg"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/tensorflowFetchUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="360dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tensorflowInputImage"
            app:layout_constraintBottom_toTopOf="@id/test"
            android:hint="@string/url"
            android:layout_marginTop="8dp"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="1"
                app:textChangeFunction="@{tensorFlowViewModel.textChangeResponse}" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/tensorflowFetchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="160dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tensorflowFetchUrl"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/open_image_from_file"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/test"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minWidth="160dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tensorflowFetchUrl"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@{tensorFlowViewModel.result}"
            android:layout_marginTop="8dp"
            tools:text="Some results"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>