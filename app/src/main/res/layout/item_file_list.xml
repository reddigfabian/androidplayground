<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="fileItemViewModel"
            type="com.fabian.androidplayground.ui.main.fileio.list.viewmodels.FileItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fileItemRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        tools:layout_width="100dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="8dp"
            android:src="@{fileItemViewModel.drawable}"
            android:background="@drawable/file_bg"
            tools:src="@drawable/ic_baseline_delete_24"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="8dp"
            isVisibleGone="@{fileItemViewModel.text != null}"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="@{fileItemViewModel.text}"
            tools:text="Sample shared text"/>

        <TextView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{fileItemViewModel.type}"
            tools:text="PDF"
            android:textColor="@color/white"
            android:background="#80000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="4dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>