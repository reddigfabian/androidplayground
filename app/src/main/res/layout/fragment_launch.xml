<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="launchViewModel"
            type="com.fabian.androidplayground.ui.main.launch.viewmodels.LaunchViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.picsum.detail.views.LaunchFragment">

        <Button
            android:id="@+id/picsumButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/picsumRoomButton"
            android:text="@string/lorem_picsum"
            android:onClick="@{launchViewModel::onClick}"
            android:textAllCaps="false"
            app:layout_constraintVertical_chainStyle="packed"/>

        <Button
            android:id="@+id/picsumRoomButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/picsumButton"
            app:layout_constraintBottom_toTopOf="@id/finnhubButton"
            android:text="@string/lorem_picsum_room"
            android:onClick="@{launchViewModel::onClick}"
            android:textAllCaps="false"
            app:layout_constraintVertical_chainStyle="packed"/>

        <Button
            android:id="@+id/finnhubButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/picsumRoomButton"
            app:layout_constraintBottom_toTopOf="@id/tensorFlowButton"
            android:text="@string/finnhub"
            android:textAllCaps="false"
            android:onClick="@{launchViewModel::onClick}"/>

        <Button
            android:id="@+id/tensorFlowButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/finnhubButton"
            app:layout_constraintBottom_toTopOf="@id/clickableLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/tensorflow"
            android:textAllCaps="false"
            android:onClick="@{launchViewModel::onClick}"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clickableLayout"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:minWidth="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tensorFlowButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/purple_200"
            android:layout_marginVertical="8dp"
            android:onClick="@{launchViewModel::onClick}"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/linkTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/purple_500"
                android:textColor="@color/white"
                android:padding="4dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_margin="16dp"
                android:text="Link www.google.com Link Link www.yahoo.com Link Link www.microsoft.com Link"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>