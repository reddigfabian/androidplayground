    <navigation
        android:id="@+id/choose_name_nav_graph"
        app:startDestination="@id/ChooseNameFragment">
        <fragment
            android:id="@+id/ChooseNameFragment"
            android:name="com.fabian.androidplayground.ui.user.name.views.ChooseNameFragment"
            tools:layout="@layout/fragment_choose_name">
            <argument
                android:name="nextID"
                app:argType="integer"
                android:defaultValue="0"/>
            <argument
                android:name="intentArgs"
                app:argType="com.fabian.androidplayground.common.navigation.IntentNavArgs"
                app:nullable="true"
                android:defaultValue="@null"/>
        </fragment>
        <action
            android:id="@+id/tets"
            app:destination="@id/choose_password_nav_graph"/>
    </navigation>

    <navigation
        android:id="@+id/choose_password_nav_graph"
        app:startDestination="@id/ChoosePasswordFragment">
        <fragment
            android:id="@+id/ChoosePasswordFragment"
            android:name="com.fabian.androidplayground.ui.user.password.views.ChoosePasswordFragment"
            tools:layout="@layout/fragment_choose_password">
            <action
                android:id="@+id/choose_password_to_confirm_password"
                app:destination="@id/ConfirmPasswordFragment" />
            <argument
                android:name="nextID"
                app:argType="integer"
                android:defaultValue="0"/>
            <argument
                android:name="intentArgs"
                app:argType="com.fabian.androidplayground.common.navigation.IntentNavArgs"
                app:nullable="true"
                android:defaultValue="@null"/>
        </fragment>
        <fragment
            android:id="@+id/ConfirmPasswordFragment"
            android:name="com.fabian.androidplayground.ui.user.password.views.ConfirmPasswordFragment"
            tools:layout="@layout/fragment_confirm_password">
            <argument
                android:name="nextID"
                app:argType="integer"
                android:defaultValue="0"/>
            <argument
                android:name="intentArgs"
                app:argType="com.fabian.androidplayground.common.navigation.IntentNavArgs"
                app:nullable="true"
                android:defaultValue="@null"/>
        </fragment>
    </navigation>

